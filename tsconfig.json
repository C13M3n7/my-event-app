{
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["svelte", "vite/client"],
    "paths": {
      "$app/*": ["node_modules/@sveltejs/kit/src/runtime/app/*"],
      "$lib/*": ["src/lib/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte",
    "globals.d.ts",
    "svelte.config.js", "vite.config.ts", ".svelte-kit/types"
  ]
}
